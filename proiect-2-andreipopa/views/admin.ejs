<% if (utilizator) { %>
    <% if (utilizator.rol === 'admin') { %>
        <h2>Bine ai venit, <%= utilizator.nume %> <%= utilizator.prenume %>!</h2>
        <form action="/admin/adauga-produs" method="POST" enctype="multipart/form-data" class="form-administrator">
            <label for="nume">Nume produs:</label>
            <input type="text" id="nume" name="nume" required><br>
            
            <label for="pret">Preț:</label>
            <input type="number" id="pret" name="pret" step="0.01" min="0.00" required><br>
            
            <label for="gramaj">Gramaj:</label>
            <input type="number" id="gramaj" name="gramaj" step="0.01" min="0.01" required><br>
            
            <label for="imagine">Imagine:</label>
            <input type="file" id="imagine" name="imagine" required><br>
            
            <button type="submit">Adaugă produs</button>
        </form>
    <% } else if (utilizator.rol === 'user') { %>
        <h2>Trebuie să aveți drepturi de administrator pentru a accesa această pagină.</h2>
    <% } %>
<% } else { %>
    <h2>Trebuie mai întâi să vă autentificați pentru a putea accesa această pagină.</h2>
<% } %>
